<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProgresoN2Ayala.Views.Chistes"
             Title="Chistes">
    <AbsoluteLayout>
        <Label x:Name="ChisteLabel"
               Text="Cargando chiste..."
               FontSize="20"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               AbsoluteLayout.LayoutBounds="0.5,0.4,0.9,-1"
               AbsoluteLayout.LayoutFlags="All" />
        <Button Text="Otro chiste"
                Clicked="OnOtroChisteClicked"
                AbsoluteLayout.LayoutBounds="0.5,1,0.5,50"
                AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional" />

    </AbsoluteLayout>
</ContentPage>