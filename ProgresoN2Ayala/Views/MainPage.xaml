<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProgresoN2Ayala.MainPage">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Bienvenido a la aplicación de Recargas" 
               FontAttributes="Bold" 
               FontSize="Large" 
               HorizontalOptions="Center" />
        <Image 
            Source="ejemplo.jpg"
            WidthRequest="150"
            HeightRequest="150"
            HorizontalOptions="Center" />
        <Button 
            x:Name="IrAChistes"
            Text="Ir a Chiste"
            Clicked="IrAChistes_Clicked"
            />

        <Button
            x:Name="IrAAbout"
            Text="Ir a About"
            Clicked="IrAAbout_Clicked" 
            />

    </StackLayout>

</ContentPage>
